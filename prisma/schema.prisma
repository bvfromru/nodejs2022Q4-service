generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

model User {
  id        String     @id @default(uuid())
  login     String
  password  String
  version   Int        @default(1)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  refreshToken String?
}

model Artist {
  id          String      @id @default(uuid())
  name        String
  grammy      Boolean
  favorites   Favorites?  @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId  String?
  Album       Album[]
  Track       Track[]
}

model Album {
  id          String      @id @default(uuid())
  name        String
  year        Int
  artist      Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?
  favorites   Favorites?  @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId  String?
  Track       Track[]
}

model Track {
  id          String      @id @default(uuid())
  name        String
  artist      Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?
  album       Album?      @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId     String?
  duration    Int
  favorites   Favorites?  @relation(fields: [favoriteId], references: [id], onDelete: SetNull)
  favoriteId  String?
}

model Favorites {
  id      String   @id @default(uuid())
  artists Artist[]
  albums  Album[]
  tracks  Track[]
}

